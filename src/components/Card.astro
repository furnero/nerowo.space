---
const links = [
  { name: 'Twitter / X', href: 'https://x.com/NeroZhen', icon: 'fa-brands fa-x-twitter' },
  { name: 'FurAffinity', href: 'https://www.furaffinity.net/user/nerozhen', icon: 'fa-solid fa-paw' },
  { name: 'Telegram', href: 'https://t.me/nerozhen', icon: 'fa-brands fa-telegram' },
  { name: 'BARQ!', href: 'https://barq.app/@bluenero', icon: 'fa-solid fa-dog' },
  { name: 'Discord', href: 'http://discordapp.com/users/683815400835645527', icon: 'fa-brands fa-discord' },
  { name: 'OrionSky', href: 'https://orionsky.de/', icon: 'fa-solid fa-globe' },
  { name: 'Gallery', id: 'gallery-overlay', icon: 'fa-solid fa-images' },
  { name: 'Friends', id: 'friends-overlay', icon: 'fa-solid fa-users' },
  { name: 'Events', id: 'events-overlay', icon: 'fa-solid fa-calendar-days' },
  { name: 'Guests', id: 'comments-overlay', icon: 'fa-solid fa-message' },
];
---

<div class="container">
  <div class="gradient-border">
    <img src="/img/avatar.gif" alt="Avatar" class="profile-picture" />
  </div>

  <h1 class="profile-name">
    <span class="animated-text">Nerozhen</span>
  </h1>
  <p class="profile-bio">19y | German | Fox | Coder | Sysadmin</p>

  <div class="links">
    {links.map(link => (
      link.href ? (
        <a href={link.href} target="_blank" class="link-button">
          {link.name} <i class:list={[link.icon]}></i>
        </a>
      ) : (
        <button class="link-button" data-overlay-button={link.id}>
          {link.name} <i class:list={[link.icon]}></i>
        </button>
      )
    ))}
  </div>
</div>

<style>
.container {
  position: relative;
  padding: 40px 50px;
  text-align: center;
  background-color: rgba(44, 44, 46, 0.25);
  -webkit-backdrop-filter: blur(10px);
  backdrop-filter: blur(10px);
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.1);
  width: 100%;
  max-width: 650px;
  border-radius: 12px;
  box-sizing: border-box;
}

.gradient-border {
  width: 150px; height: 150px;
  position: relative; padding: 5px;
  box-sizing: border-box; border-radius: 50%;
  margin: 0 auto 15px;
  background: linear-gradient(60deg, #d60270, #9b4f96, #0038a8, #d60270);
  background-size: 300% 300%;
  animation: animated-border 4s ease-in-out infinite, fadeInUp 0.5s ease-out 0.2s forwards;
  opacity: 0;
}

.profile-picture {
  width: 100%; height: 100%;
  object-fit: cover; border-radius: 50%;
}

.profile-name {
  margin-top: 15px; margin-bottom: 5px;
  font-size: 2em;
}

.profile-bio {
  margin-top: 0; margin-bottom: 30px;
  font-size: 1.1em; color: #bdc3c7;
}

.links {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15px;
}

.link-button {
  box-sizing: border-box;
  display: flex;
  align-items: center; text-align: left;
  width: 100%; padding: 12px 20px;
  font-size: 1em; background-color: #262a2f;
  border: 1px solid #1a1d22; color: #a7a7a7;
  text-decoration: none; border-radius: 10px;
  font-weight: bold; cursor: pointer;
  box-shadow: inset 2px 2px 5px rgba(0, 0, 0, 0.4), inset -2px -2px 5px rgba(255, 255, 255, 0.05);
  transition: transform 0.2s ease, background-color 0.2s ease, border-color 0.2s ease;
}

.link-button i { margin-left: auto; font-size: 1.1em; color: #eaf2f8; opacity: 0.8; }
.link-button:hover {
  background-color: #212529; color: #fff;
  border-color: rgba(93, 173, 226, 0.5);
  transform: scale(1.02);
}

.animated-text {
  background: linear-gradient(90deg, #f8a1d1, #a37eec, #00b8d4, #f8a1d1);
  background-size: 200% auto;
  background-clip: text; -webkit-background-clip: text;
  color: transparent;
  animation: textGradientAnimation 4s linear infinite;
}
@keyframes textGradientAnimation {
  from { background-position: 0% center; }
  to { background-position: -200% center; }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}
.profile-name, .profile-bio, .link-button {
  opacity: 0;
  animation: fadeInUp 0.5s ease-out forwards;
}
.gradient-border { animation-delay: 0.2s; }
.profile-name { animation-delay: 0.4s; }
.profile-bio { animation-delay: 0.6s; }
.links .link-button:nth-child(1) { animation-delay: 0.8s; }
.links .link-button:nth-child(2) { animation-delay: 0.9s; }
.links .link-button:nth-child(3) { animation-delay: 1.0s; }
.links .link-button:nth-child(4) { animation-delay: 1.1s; }
.links .link-button:nth-child(5) { animation-delay: 1.2s; }
.links .link-button:nth-child(6) { animation-delay: 1.3s; }
.links .link-button:nth-child(7) { animation-delay: 1.4s; }
.links .link-button:nth-child(8) { animation-delay: 1.5s; }
.links .link-button:nth-child(9) { animation-delay: 1.6s; }
.links .link-button:nth-child(10) { animation-delay: 1.7s; }


@media (max-width: 768px) {
  .links { grid-template-columns: 1fr; }
  .container { padding: 40px 25px; }
}
</style>

