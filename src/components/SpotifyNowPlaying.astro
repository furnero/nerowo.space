<style>
    /* Stile für Spotify Widget aus deiner style.css */
    .widget-card{width:100%;max-width:450px;box-sizing:border-box;border-radius:12px;padding:10px;box-shadow:0 8px 25px rgba(0,0,0,.3)}
    #now-playing-container{background-color:rgba(29,185,84,.95);border:1px solid rgba(255,255,255,.3);padding:12px 20px;display:flex;align-items:center;gap:12px}
    #now-playing-container.hidden{display:none!important}
    #now-playing-container #album-art{width:50px;height:50px;border-radius:4px;object-fit:cover;flex-shrink:0}
    #now-playing-container #now-playing-info{flex-grow:1;overflow:hidden;text-align:left;min-width:0}
    #now-playing-container #song-name{color:#fff;font-weight:700;font-size:1em;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;margin:0}
    #now-playing-container #artist-name{color:rgba(255,255,255,.85);font-size:.85em;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;margin:4px 0 0}
    #now-playing-container #listen-along-link{color:#fff;font-size:1.6em;transition:transform .2s ease}
    #now-playing-container #listen-along-link:hover{transform:scale(1.1)}
    #now-playing-container .now-playing-label{margin:0 0 5px;font-size:.75em;font-weight:400;color:rgba(255,255,255,.85);text-transform:uppercase;letter-spacing:.5px}
