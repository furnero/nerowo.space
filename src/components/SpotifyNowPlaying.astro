<div id="now-playing-container" class="widget-card">
  <img id="album-art" src="" alt="Album Art" />
  <div id="now-playing-info">
    <p id="song-name"></p>
    <p id="artist-name"></p>
  </div>
  <a id="listen-along-link" href="#" target="_blank">
    <i class="fa-brands fa-spotify"></i>
  </a>
</div>

<script>
  function updateNowPlaying() {
    fetch("https://api.lanyard.rest/v1/users/683815400835645527")
      .then((response) => response.json())
      .then((data) => {
        const container = document.getElementById("now-playing-container");
        if (data.success && data.data.listening_to_spotify) {
          const track = data.data.spotify;
          document.getElementById("album-art").src = track.album_art_url;
          document.getElementById("song-name").textContent = track.song;
          document.getElementById("artist-name").textContent = track.artist;
          document.getElementById("listen-along-link").href = `https://open.spotify.com/track/${track.track_id}`;
          // Fügt die 'visible'-Klasse hinzu, um den Fade-in zu starten
          container.classList.add("visible");
        } else {
          // Entfernt die 'visible'-Klasse, um den Fade-out zu starten
          container.classList.remove("visible");
        }
      })
      .catch((error) => {
        console.error("Error fetching Now Playing data:", error);
        document.getElementById("now-playing-container")?.classList.remove("visible");
      });
  }
  updateNowPlaying();
  setInterval(updateNowPlaying, 15000);
</script>

<style>
    #now-playing-container {
        background-color: rgba(29, 185, 84, 0.95);
        border: 1px solid rgba(255, 255, 255, 0.3);
        padding: 12px 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        border-radius: 12px; /* Abgerundete Ecken hinzugefügt */
        /* Startzustand: Unsichtbar und leicht nach oben verschoben */
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        /* Animation verlangsamt */
        transition: opacity 0.8s ease, transform 0.8s ease, visibility 0.8s;
    }

    /* Sichtbarer Zustand mit sanfter Animation */
    #now-playing-container.visible {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    #album-art {
        width: 50px;
        height: 50px;
        border-radius: 4px;
        object-fit: cover;
        flex-shrink: 0;
    }
    #now-playing-info {
        flex-grow: 1;
        overflow: hidden;
        text-align: left;
        min-width: 0;
    }
    #song-name {
        color: #ffffff;
        font-weight: 700;
        font-size: 1em;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        margin: 0;
    }
    #artist-name {
        color: rgba(255, 255, 255, 0.85);
        font-size: 0.85em;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        margin: 4px 0 0 0;
    }
    #listen-along-link {
        color: #ffffff;
        font-size: 1.6em;
        transition: transform 0.2s ease;
    }
    #listen-along-link:hover {
        transform: scale(1.1);
    }
</style>

